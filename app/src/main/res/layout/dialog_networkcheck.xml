<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/wifi_ok"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_internet_ok"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/wifi_noip"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_internet_noip"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/wifi_problem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_internet_problem"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/wifi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"/>

    </LinearLayout>

</FrameLayout>