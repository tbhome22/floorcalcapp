<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:background="@drawable/border2">
            <TextView
                android:id="@+id/add_floorplan_name"
                android:text="Area: [Name]"
                android:textStyle="bold"
                android:layout_span="2"
                android:textSize="16dp"
                android:textColor="#ff9100"
                android:padding="4dp"/>

            <ImageButton
                android:id="@+id/add_floorplan_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:padding="4dp"/>

            <ImageButton
                android:id="@+id/add_floorplan_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_record"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:padding="4dp"/>

        </TableRow>

        <TableRow
            android:background="@drawable/border">
            <TextView
                android:text="Length (cm)"
                android:textSize="13dp"
                android:background="@drawable/border"
                android:padding="4dp" />

            <TextView
                android:id="@+id/add_floorplan_length"
                android:text="[Length]"
                android:textSize="13dp"
                android:background="@drawable/border"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_span="3"/>
        </TableRow>

        <TableRow
            android:background="@drawable/border">
            <TextView
                android:text="Width (cm)"
                android:textSize="13dp"
                android:background="@drawable/border"
                android:padding="4dp" />

            <TextView
                android:id="@+id/add_floorplan_width"
                android:text="[Width]"
                android:textSize="13dp"
                android:background="@drawable/border"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_span="3" />
        </TableRow>

        <TableRow
            android:background="@drawable/border">
            <TextView
                android:id="@+id/add_floorplan_totalArea_label"
                android:text=""
                android:textSize="13dp"
                android:background="@drawable/border"
                android:padding="4dp" />

            <TextView
                android:id="@+id/add_floorplan_totalArea"
                android:text="[Total Area]"
                android:textSize="13dp"
                android:background="@drawable/border"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_span="3" />
        </TableRow>

    </TableLayout>

</RelativeLayout>